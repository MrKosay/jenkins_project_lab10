pipeline {
  agent any
  options { skipDefaultCheckout(false) }

  stages {
    stage('Install') {
      steps {
        powershell '''
          python -m pip install -U pip
          pip install -r requirements.txt
        '''
      }
    }

    stage('Tests + Coverage') {
      steps {
        powershell '''
          coverage run -m pytest
          if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }
          coverage html
          coverage report
        '''
      }
      post {
        always {
          archiveArtifacts artifacts: 'htmlcov/**', allowEmptyArchive: true
        }
      }
    }

    stage('Security Scan') {
      steps {
        powershell '''
          New-Item -ItemType Directory -Force -Path reports | Out-Null
          bandit -q -r . -f txt -o reports\\bandit.txt --exit-zero --severity-level low --confidence-level low
        '''
      }
      post {
        always {
          archiveArtifacts artifacts: 'reports/**', allowEmptyArchive: true
        }
      }
    }

    // (Optional) very basic "deploy" placeholder to satisfy the exercise
    stage('Deploy') {
      steps {
        powershell 'Write-Output "Deploying (placeholder)..."'
      }
    }
  }
}
